<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_txt_black_background_white">

        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#E23D3D3D</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/btn_white</item>
        <item name="android:layout_width">231dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:enabled">true</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:fontFamily">@font/raleway</item>
    </style>

    <style name="btn_txt_white_background_grey">

        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#E2FFFFFF</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/btn_grey</item>
        <item name="android:layout_width">231dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:enabled">true</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:fontFamily">@font/raleway</item>
    </style>

    <style name="txtView_title1">

    <item name="android:textSize">24sp</item>
    <item name="android:layout_width">161dp</item>
    <item name="android:layout_height">34dp</item>
    <item name="android:fontFamily">@font/raleway</item>
    <item name="android:ems">10</item>

</style>

    <style name="txtView_titleTabs">

        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">161dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:fontFamily">@font/raleway_extrabold</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>

    </style>


</resources>
