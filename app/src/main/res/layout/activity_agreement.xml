<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ClientChef.AgreementClass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleRats"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:fontFamily="@font/raleway_extrabold"
            android:inputType="textPersonName"
            android:text="ratatouille"
            android:textAlignment="viewStart"
            android:textColor="#E2000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/ratcss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway_extrabold"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/raleway"
            android:text=" rat$"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView18"

        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/raleway_extrabold"
        android:inputType="textPersonName"
        android:text="Acuerdo Orden"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView21"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/raleway"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Receta"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtreceta"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="90dp"
            android:ems="18"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center_horizontal"
            android:hapticFeedbackEnabled="true"
            android:inputType="textPersonName"
            android:textAllCaps="true"
            android:textColor="@color/colorGrisRata"
            android:textColorHighlight="#90000000"
            android:textColorLink="#90000000"
            android:textCursorDrawable="@color/colorGrisRata"
            android:textSize="23sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView24"

            android:layout_width="171dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="23dp"

            android:background="@null"
            android:ems="10"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="CLIENTE"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView25"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="23dp"

            android:background="@null"
            android:ems="10"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="CHEF"
            android:textSize="25sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:id="@+id/divider34"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView23"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:background="@color/colorGrisRata"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Ingredientes"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/inClientList"
                    android:layout_width="192dp"
                    android:layout_height="200dp" />

                <ListView
                    android:id="@+id/inChefList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ListView>
            </LinearLayout>

            <Button
                android:id="@+id/buttonInge"
                style="@style/btn_txt_black_background_white"
                android:layout_width="139dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Elegir"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView210"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:background="@color/colorGrisRata"
                    android:ems="10"
                    android:fontFamily="@font/raleway"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="Utensilios"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal">

                    <ListView
                        android:id="@+id/toolsClientList"
                        android:layout_width="192dp"
                        android:layout_height="match_parent" />

                    <ListView
                        android:id="@+id/toolsChefList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </ListView>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_toolsAgr"
                    style="@style/btn_txt_black_background_white"
                    android:layout_width="134dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="Elegir"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_weight="1"
            android:checked="false"
            android:scaleX="1.70"
            android:scaleY="1.70"
            android:textColorHighlight="#03A9F4"
            android:textColorLink="#03A9F4"
            />

        <CheckBox
            android:id="@+id/checkChef"
            android:layout_width="6dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_weight="1"
            android:checked="false"
            android:scaleX="1.70"
            android:scaleY="1.70" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirmar"
        style="@style/btn_txt_white_background_grey"
        android:layout_width="269dp"
        android:layout_height="79dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Confirmar Orden" />

</LinearLayout>

